{
  "name": "cz-conventional-and-smart",
  "version": "1.0.0",
  "description": "A commitizen adapter that handle both conventional change logs and JIRA smart commits",
  "main": "dist/index.js",
  "scripts": {
    "src:build": "npm run lint && tsc",
    "src:watch": "npm run lint && tsc -w",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "test": "NODE_PATH=test/ jest --roots test -runInBand --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vellama/cz-conventional-and-smart.git"
  },
  "keywords": [
    "commitizen",
    "commitizen",
    "adapter",
    "jira",
    "jira",
    "smart",
    "commit"
  ],
  "author": "Vincent ELLAMA <vincent.ellama@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vellama/cz-conventional-and-smart/issues"
  },
  "homepage": "https://github.com/vellama/cz-conventional-and-smart#readme",
  "dependencies": {
    "@commitlint/cli": "12.1.1",
    "chalk": "4.1.0",
    "commitizen": "4.2.3",
    "conventional-commit-types": "3.0.0",
    "inquirer": "8.0.0",
    "word-wrap": "1.2.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "eslint": "7.24.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-promise": "5.1.0",
    "jest": "26.6.3",
    "prettier-config-standard": "4.0.0"
  }
}
